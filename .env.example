# RS Personal Assistant Environment Configuration
# Copy this file to .env and adjust values as needed
# NEVER commit .env files to version control!

#==============================================================================
# üöÄ APPLICATION SETTINGS
#==============================================================================

# Application name and version
# RSPA_APP_NAME=RS Personal Assistant
# RSPA_APP_VERSION=0.1.0

# Enable debug mode (development only)
# RSPA_DEBUG=false

# Enable integration tests (requires external services like Ollama, Gmail)
# RSPA_INTEGRATION_TESTS=false

#==============================================================================
# üóÑÔ∏è DATABASE SETTINGS
#==============================================================================

# Override default database URL
# Default: Auto-computed based on RSPA_DATABASE_DEV_MODE
# Examples:
# RSPA_DATABASE_URL=sqlite:///./data/main.db                    # Development
# RSPA_DATABASE_URL=sqlite:///home/user/.rs/pa/main.db          # Production
# RSPA_DATABASE_URL=postgresql://user:pass@localhost/rspa       # PostgreSQL

# Enable development mode (stores database in ./data/ instead of ~/.rs/pa/)
RSPA_DATABASE_DEV_MODE=false

# Database backup configuration
# RSPA_DATABASE_BACKUP_COUNT=5                    # Number of backups to keep (1-50)
# RSPA_DATABASE_BACKUP_BEFORE_MIGRATION=true      # Backup before migrations

# Connection pool settings
# RSPA_DATABASE_POOL_SIZE=5                       # Connection pool size (1-20)
# RSPA_DATABASE_MAX_OVERFLOW=10                   # Max overflow connections (0-50)
# RSPA_DATABASE_POOL_TIMEOUT=30                   # Pool timeout in seconds (5-300)

#==============================================================================
# ü§ñ OLLAMA LLM SETTINGS
#==============================================================================

# Ollama service connection
RSPA_OLLAMA_HOST=localhost
RSPA_OLLAMA_PORT=11434

# Default model configuration
# RSPA_OLLAMA_DEFAULT_MODEL=llama4:maverick        # Model format: name:tag
# RSPA_OLLAMA_TEMPERATURE=0.1                     # Response creativity (0.0-2.0)
# RSPA_OLLAMA_MAX_TOKENS=                         # Max response tokens (optional)

# Request handling
# RSPA_OLLAMA_TIMEOUT=30                          # Request timeout seconds (5-300)
# RSPA_OLLAMA_MAX_RETRIES=3                       # Max retry attempts (0-10)
# RSPA_OLLAMA_HEALTH_CHECK_INTERVAL=60            # Health check interval (10-600)

#==============================================================================
# üìã LOGGING SETTINGS
#==============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
RSPA_LOGGING_LEVEL=INFO

# File logging configuration
# RSPA_LOGGING_LOG_TO_FILE=true                   # Enable file logging
# RSPA_LOGGING_LOG_FILE_MAX_SIZE=10485760         # Max log file size (10MB)
# RSPA_LOGGING_LOG_FILE_BACKUP_COUNT=5            # Number of log backups (1-50)

# Console logging configuration
# RSPA_LOGGING_LOG_TO_CONSOLE=true                # Enable console logging
# RSPA_LOGGING_COLORED_CONSOLE=true               # Enable colored output

# Database logging (for UI log viewer)
# RSPA_LOGGING_LOG_TO_DATABASE=true               # Store logs in database
# RSPA_LOGGING_DATABASE_LOG_RETENTION_DAYS=30     # Log retention days (1-365)

#==============================================================================
# üîí SECURITY SETTINGS
#==============================================================================

# Credential management
# RSPA_SECURITY_CREDENTIAL_ENCRYPTION=true        # Encrypt credentials at rest
# RSPA_SECURITY_CREDENTIAL_KEY_ROTATION_DAYS=90   # Key rotation frequency (1-365)

# Token management
# RSPA_SECURITY_TOKEN_EXPIRATION_HOURS=24         # OAuth token lifetime (1-168)

# Security monitoring
# RSPA_SECURITY_ENABLE_AUDIT_LOGGING=true         # Enable security audit logs
# RSPA_SECURITY_MAX_FAILED_ATTEMPTS=5             # Max failed logins (1-50)
# RSPA_SECURITY_LOCKOUT_DURATION_MINUTES=15       # Lockout duration (1-1440)

#==============================================================================
# ü§ñ AGENT SYSTEM SETTINGS
#==============================================================================

# Task execution limits
# RSPA_AGENTS_MAX_CONCURRENT_TASKS=3              # Max concurrent tasks (1-20)
# RSPA_AGENTS_MAX_EXECUTION_TIME_MINUTES=30       # Max execution time (1-1440)

# Retry configuration
# RSPA_AGENTS_MAX_RETRIES=3                       # Max retry attempts (0-10)
# RSPA_AGENTS_RETRY_BACKOFF_SECONDS=5             # Backoff between retries (1-300)

# Monitoring
# RSPA_AGENTS_HEALTH_CHECK_ENABLED=true           # Enable health monitoring
# RSPA_AGENTS_PERFORMANCE_MONITORING=true         # Enable performance monitoring

# Enabled agents (JSON array format)
# RSPA_AGENTS_ENABLED_AGENTS=["reimbursement"]
# RSPA_AGENTS_ENABLED_AGENTS=["reimbursement", "task_manager", "calendar"]
# RSPA_AGENTS_ENABLED_AGENTS=["reimbursement", "task_manager", "calendar", "document_processor"]

#==============================================================================
# üíæ CACHE SETTINGS
#==============================================================================

# LLM response caching
# RSPA_CACHE_ENABLE_LLM_CACHE=true                # Enable LLM response caching
# RSPA_CACHE_LLM_CACHE_TTL_HOURS=24              # Cache lifetime hours (1-168)
# RSPA_CACHE_LLM_CACHE_MAX_SIZE_MB=100           # Max cache size MB (10-1000)

# General data caching
# RSPA_CACHE_ENABLE_DATA_CACHE=true              # Enable general caching
# RSPA_CACHE_DATA_CACHE_TTL_MINUTES=60           # Cache lifetime minutes (1-1440)

#==============================================================================
# üé® UI SETTINGS
#==============================================================================

# Streamlit server configuration
# RSPA_UI_HOST=localhost                          # Server host
# RSPA_UI_PORT=8501                              # Server port (1024-65535)

# UI appearance
# RSPA_UI_THEME=auto                             # Theme: auto, light, dark
# RSPA_UI_PAGE_TITLE=RS Personal Assistant       # Browser page title

# UI features
# RSPA_UI_SHOW_PERFORMANCE_METRICS=true          # Show performance metrics
# RSPA_UI_AUTO_REFRESH_INTERVAL=30               # Auto-refresh seconds (5-300)

#==============================================================================
# üê≥ DOCKER-SPECIFIC SETTINGS
#==============================================================================

# When running in Docker containers
# RSPA_OLLAMA_HOST=host.docker.internal          # Access host Ollama from container
# RSPA_OLLAMA_HOST=ollama-container               # Access Ollama container by name
# PYTHONUNBUFFERED=1                              # Ensure Python output in logs

#==============================================================================
# üîß DEVELOPMENT TOOLS (Optional)
#==============================================================================

# Package manager cache directories
# UV_CACHE_DIR=$HOME/.cache/uv                   # UV package manager cache
# BLACK_CACHE_DIR=$HOME/.cache/black              # Black formatter cache

#==============================================================================
# üìù USAGE EXAMPLES
#==============================================================================

# Development setup:
# RSPA_DATABASE_DEV_MODE=true
# RSPA_LOGGING_LEVEL=DEBUG
# RSPA_DEBUG=true

# Production setup:
# RSPA_DATABASE_DEV_MODE=false
# RSPA_LOGGING_LEVEL=INFO
# RSPA_DEBUG=false

# Custom Ollama server:
# RSPA_OLLAMA_HOST=192.168.1.100
# RSPA_OLLAMA_PORT=11434
# RSPA_OLLAMA_DEFAULT_MODEL=llama4:latest

# High-performance setup:
# RSPA_AGENTS_MAX_CONCURRENT_TASKS=10
# RSPA_DATABASE_POOL_SIZE=15
# RSPA_CACHE_LLM_CACHE_MAX_SIZE_MB=500